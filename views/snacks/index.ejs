<%- include('../partials/header') %>

  <table id="list">
    <thead>
      <tr>
        <th>Snack</th>
        </tr>
    </thead>
    <tbody>
      <% snacks.forEach(function(s) { %>
        <tr>
          <td>
            <%= s.Snack %>
          </td>
          <TD>
            <form action="/snacks/<%= s._id %>">
              <button type="submit">Details</button>
            </form>

          <TD>
            <form action="/snacks/<%= s._id %>?_method=DELETE" method="POST">
              <button type="submit">Delete</button>
            </form>
        </tr>
        <% }); %>
    </tbody>
  </table>
  <%- include('../partials/footer') %>