<%- include('../partials/header') %>

<form id="log-snacks-form" action="/snacks/<%= snack._id %>/frequency" method="POST">
    <label>Date:
        <input type="datetime-local" name="Date">
      </label><br>
    <label>Repetition:
        <input type="number" name="Repetition" min="1" max="9999">
    </label><br>

    <label>Set:
    <input type="number" name="Sets" min="1" max="9999">
</label><br>

<button type="submit">Log Today's Snack</button>
</form>

<table id="list">
    <thead>
      <tr>
        <th>Date</th>
        <th>Repetitions</th>
        <th>Sets</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% frequency.forEach(function(f) { %>
        <tr>
          <td><%= f.Date %></td>
          <td><%= f.Repetition %></td>
          <td><%= f.Sets %></td>
           <td><a href="/frequeny/<%= f._id %>">DETAILS</a></td>
        </tr>
        <% }); %>
      </tbody>
    </table>

<%- include('../partials/footer') %>