<%- include('../partials/header') %>

  <form id="log-snacks-form" action="/snacks/<%= snack._id %>/frequency" method="POST">
    <label>Date:
      <input type="datetime-local" required name="Date">
    </label><br>

    <label>Repetition:
      <input type="number" name="Repetition" required min="1" max="9999">
    </label><br>

    <label>Set:
      <input type="number" name="Sets" required min="1" max="9999">
    </label><br>

    <button type="submit">Log Today's Snack</button>
  </form>

  <table id="list">
    <thead>
      <tr>
        <th>Date</th>
        <th>Repetitions</th>
        <th>Sets</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% frequency.forEach(function(f) { %>
        <tr>
          <td>
            <%= f.Date %>
          </td>
          <td>
            <%= f.Repetition %>
          </td>
          <td>
            <%= f.Sets %>
          </td>
          <td>
            <form action="/frequency/<%= f._id %>/edit">
              <button type="submit">UPDATE</button>
            </form>
          </td>

          <TD>
            <form action="/frequency/<%= f._id %>?_method=DELETE" method="POST">
              <button type="submit">Delete</button>
            </form>
          </TD>
        </tr>
        <% }); %>
    </tbody>
  </table>

  <%- include('../partials/footer') %>